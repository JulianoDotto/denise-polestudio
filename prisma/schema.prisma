generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum ItemType {
  PRODUCT
  CLASS
  EBOOK
  EVENT
}

model StoreSection {
  id        String  @id @default(cuid())
  slug      String  @unique
  title     String
  isAdult   Boolean @default(false)
  isActive  Boolean @default(true)
  bannerUrl String?
  order     Int     @default(0)

  items     Item[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id                     String    @id @default(cuid())
  type                   ItemType
  slug                   String    @unique
  title                  String
  priceCents             Int?
  coverUrl               String?
  description            String?
  isActive               Boolean   @default(true)
  order                  Int       @default(0)
  hotmartUrl             String?
  scheduleOnlineUrl      String?
  schedulePresentialUrl  String?
  whatsappTextTemplate   String?
  eventDate              DateTime?

  storeSectionId         String?
  storeSection           StoreSection? @relation(fields: [storeSectionId], references: [id])
  images                 ItemImage[]

  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model ItemImage {
  id      String @id @default(cuid())
  url     String
  alt     String?
  order   Int    @default(0)
  itemId  String

  item    Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  name         String?
  passwordHash String
  role         Role   @default(USER)
  isActive     Boolean @default(true)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model StorePost {
  id        String   @id @default(cuid())
  title     String
  imageUrl  String?
  isPinned  Boolean  @default(false)
  expiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
